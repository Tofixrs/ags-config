{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"lib": ["ES2022"],
		"allowJs": true,
		"checkJs": true,
		"strict": true,
		"noImplicitAny": false,
		"baseUrl": "./src",
		"skipLibCheck": true,
		"typeRoots": ["./types"],
		"paths": {
			"@/*": ["./*"],
			"@lib/*": ["./lib/*"],
			"@components/*": ["./components/*"],
			"@widgets/*": ["./widgets/*"]
		},
		"outDir": "dist"
	}
}
